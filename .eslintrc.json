{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
          ],
          "no-plusplus": "off",
          "no-param-reassign": "off",
          "no-undef": "off",
          "no-unused-vars": "off",
          "no-loop-func": "off",
          "no-inner-declarations": "off"
    }
}
